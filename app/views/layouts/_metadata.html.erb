<%= content_for :title, title %>

<% content_for :head do %>
	<link rel='canonical' href=<%= url %> />
	<meta name='description' content='<% description %>' />
	<meta http-equiv='Content-Type' content='text/css; charset=UTF-8' />

	<meta property='og:title' content='<%= title %>' />
	<meta property='og:description' content='<%= description %>' />
	<meta property='og:site_name' content='Heard In College' />
	<meta property='og:type'  content='website' />
	<meta property='og:url'   content='<%= url %>' />
	<meta property='og:image' content='<%= img_path %>' />

	<meta name='twitter:card' content='summary' />
	<meta name='twitter:url' content='<%= url %>' />
	<meta name='twitter:title' content='<%= title %>' />
	<meta name='twitter:description' content='<%= description %>' />
	<meta name='twitter:image' content='<%= img_path %>' />
	<meta name='twitter:site' content='@heardincollege'>

	<% extra_meta.each do |property, content| %>
		<meta property='<%= property %>' content='<%= content %>' />
	<% end %>
<% end %>