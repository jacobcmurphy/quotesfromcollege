<% content_for :head do %>
	<meta property='og:title' content='<%= @post.text %>'>
	<meta property='og:image' content='http://www.quotesfromcollege.com/favicon.ico'>
<% end %>
<% content_for :title, "Post #{@post.id} | Quotes From College" %>

<% if @comments_allowed %>
  <div id='fb-root'></div>
  <script>
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = '//connect.facebook.net/en_US/all.js#xfbml=1';
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
<% end %>


<%= render partial: 'show_post', locals: {post: @post} %>

<% if @comments_allowed %>
  <div class='fb-comments' data-href='<%= request.original_url %>' data-numposts='7' data-colorscheme='light'></div>
<% end %>
